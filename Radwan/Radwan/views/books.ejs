<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Books</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1>Library Books</h1>

        <form id="searchForm" action="/search" method="get">
            <input type="text" name="bookTitle" placeholder="Search by book title..." required>
            <button type="submit">Search</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Published Date</th>
                    <th>ISBN</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (books && books.length > 0) { %>
                    <% books.forEach(book => { %>
                        <tr>
                            <td><%= book.bookTitle %></td>
                            <td><%= book.author %></td>
                            <td><%= book.genre %></td>
                            <td><%= book.publishedDate.toISOString().split('T')[0] %></td>
                            <td><%= book.isbn %></td>
                            <td>
                                <form action="/delete/<%= book._id %>" method="post" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No books found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <a href="/" class="link">Add New Book</a>
    </div>
</body>
</html>
